<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard_menus.situation_update">




    <ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/submit_id"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_centerInParent="true">
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Global Data"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:id="@+id/start_id"
            android:gravity="center_horizontal"></TextView>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Infected"
        android:textStyle="bold"
        android:textSize="35dp"
            android:layout_marginTop="35dp"
        android:layout_below="@+id/start_id"
        android:textColor="@android:color/black"
        android:id="@+id/infect_text"

        android:gravity="center_horizontal"></TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infect_text"
        android:id="@+id/infected_count"
        app:cardCornerRadius="7dp"
        app:cardElevation="10dp"
        android:layout_margin="25dp"
        >

        <TextView
            android:id="@+id/infected_people_count_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="219,548"
            android:textStyle="normal"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:padding="45dp"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"></TextView>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Death"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:id="@+id/Death_text"
        android:layout_below="@+id/infected_count"
        android:gravity="center_horizontal"></TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Death_text"
        app:cardCornerRadius="7dp"
        android:id="@+id/death_count"
        app:cardElevation="10dp"
        android:layout_margin="25dp"
        >

        <TextView
            android:id="@+id/death_people_count_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8,971"
            android:textStyle="normal"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:padding="45dp"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"></TextView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recovered"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textColor="@android:color/holo_green_dark"
        android:id="@+id/Recovered_text"
        android:layout_below="@+id/death_count"
        android:gravity="center_horizontal"></TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Recovered_text"
        app:cardCornerRadius="7dp"
        android:id="@+id/recovered_count"
        app:cardElevation="10dp"
        android:layout_margin="25dp"
        android:layout_marginBottom="35dp"
        >

        <TextView
            android:id="@+id/Recovered_people_count_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85,749"
            android:textStyle="normal"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:padding="45dp"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"></TextView>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>